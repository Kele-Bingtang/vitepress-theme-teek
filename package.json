{
  "version": "1.0.0-alpha.9",
  "type": "module",
  "private": true,
  "workspaces": [
    "vitepress-theme-teek",
    "plugins/*",
    "docs",
    "build",
    "demo/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "pnpm run clean && pnpm run -C build build",
    "publish": "bash build/scripts/publish.sh",
    "clean": "rimraf dist",
    "docs:dev": "pnpm run -C docs dev",
    "docs:build": "pnpm run -C docs build",
    "docs:preview": "pnpm run -C docs preview",
    "demo:test": "pnpm run -C demo/docs-test",
    "demo:base": "pnpm run -C demo/docs-base",
    "demo:locales": "pnpm run -C demo/docs-locales",
    "demo:localesRoot": "pnpm run -C demo/docs-locales-root",
    "stub": "pnpm to:theme stub && pnpm to:build stub && pnpm run plugin:stub",
    "plugin:stub": "pnpm to:sidebar stub && pnpm to:fileContentLoader stub && pnpm to:permalink stub && pnpm to:mdH1 stub && pnpm to:catalogue stub && pnpm to:docAnalysis stub && pnpm to:autoFrontmatter stub",
    "plugin:build": "pnpm to:sidebar build && pnpm to:fileContentLoader build && pnpm to:permalink build && pnpm to:mdH1 build && pnpm to:catalogue build && pnpm to:docAnalysis build && pnpm to:autoFrontmatter build",
    "to:theme": "pnpm run -C vitepress-theme-teek",
    "to:build": "pnpm run clean && pnpm run -C build",
    "to:sidebar": "pnpm run -C plugins/vitepress-plugin-sidebar-resolve",
    "to:fileContentLoader": "pnpm run -C plugins/vitepress-plugin-file-content-loader",
    "to:permalink": "pnpm run -C plugins/vitepress-plugin-permalink",
    "to:mdH1": "pnpm run -C plugins/vitepress-plugin-md-h1",
    "to:catalogue": "pnpm run -C plugins/vitepress-plugin-catalogue",
    "to:docAnalysis": "pnpm run -C plugins/vitepress-plugin-doc-analysis",
    "to:autoFrontmatter": "pnpm run -C plugins/vitepress-plugin-auto-frontmatter",
    "lint:lint-staged": "lint-staged -c .husky/lintstagedrc.js",
    "lint:prettier": "prettier ./**/*.{js,jsx,ts,tsx,vue,css,less,sass,scss} --write",
    "lint:eslint": "eslint . --ext .js,.jsx,.ts,.tsx,.vue --fix",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "prepare": "husky",
    "cs": "pnpm changeset",
    "cs:version": "pnpm changeset version",
    "cs:release": "pnpm run plugin:build && changeset publish",
    "cs:pre": "changeset pre enter",
    "cs:pre:exit": "changeset pre enter exit",
    "release": "standard-version",
    "release-major": "standard-version --release-as major",
    "release-minor": "standard-version --release-as minor",
    "release-patch": "standard-version --release-as patch",
    "release-as": "standard-version --release-as",
    "release-prerelease": "standard-version --prerelease",
    "cz": "git add . && git-cz",
    "czp": "git add . && git-cz && git push"
  },
  "dependencies": {
    "@changesets/cli": "^2.28.1",
    "vue": "^3.5.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@eslint/js": "^9.24.0",
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vue/compiler-core": "^3.5.13",
    "@vue/compiler-dom": "^3.5.13",
    "@vue/reactivity": "^3.5.13",
    "@vue/runtime-core": "^3.5.13",
    "@vue/runtime-dom": "^3.5.13",
    "commitizen": "^4.3.1",
    "cz-git": "^1.11.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-vue": "^10.0.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "standard-version": "^9.5.0",
    "typescript": "^5.8.3",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.8"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
